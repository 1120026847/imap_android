<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#F9F6FA"
    android:paddingTop="10dp"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:paddingLeft="17dp"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="50dp"
            android:clickable="true"
            android:padding="13dp"
            android:src="@mipmap/imap_back_grey"
            android:layout_gravity="center"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="#F9F6FA"
        android:layout_marginTop="80dp"
        android:paddingTop="20dp"
        android:paddingLeft="35dp"
        android:paddingRight="35dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:textSize="16dp"
            android:text="输入短信验证码"
            android:textColor="#cccccc"
            android:paddingBottom="10dp"
            android:layout_height="wrap_content" />
        <!--验证码输入-->
        <LinearLayout
            android:layout_marginTop="4dp"
            android:id="@+id/ll_phone"
            android:layout_width="match_parent"
            android:background="@drawable/imap_code_input_bg"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/et_code"
                android:layout_width="0dp"
                android:textColor="#AAA8B0"
                android:layout_weight="3"
                android:paddingLeft="12dp"
                android:textColorHint="#A4A2AC"
                android:background="@null"
                android:textSize="17dp"
                android:gravity="left|center_vertical"
                android:layout_height="match_parent" />
            <Button
                android:id="@+id/btn_ask"
                android:layout_width="0dp"
                android:background="#22CA80E7"
                android:textSize="18dp"
                android:text="已发送"
                android:textColor="#ffffff"
                android:layout_weight="1"
                android:layout_height="match_parent" />
        </LinearLayout>
        <!--下一步-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="45dp"
            android:layout_height="40dp">

            <Button
                android:id="@+id/btn_next"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#CA80E7"
                android:text="下一步"
                android:textColor="#ffffef"
                android:textSize="20dp" />
        </LinearLayout>
        <!--等待秒数-->
      <!--  <TextView
            android:id="@+id/tv_wait_second"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginTop="25dp"
            android:textSize="21dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="#C5BDC6"
            android:text="稍等..45秒"
            android:layout_height="wrap_content" />-->
    </LinearLayout>
</RelativeLayout>
