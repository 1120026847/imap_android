<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_container"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@drawable/myisland_list_border"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/iv_island_logo"
        android:layout_width="50dp"
        android:layout_gravity="left|center_vertical"
        android:layout_marginLeft="20dp"
        android:layout_height="50dp" />
    <!--中间-->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="14dp"
        android:gravity="left|center_vertical"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_island_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="#333333"
            android:textSize="17dp" />
    </LinearLayout>
    <!--右侧-->
    <LinearLayout
        android:layout_width="80dp"
        android:gravity="right|center_vertical"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_getin_island"
            android:layout_marginRight="10dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:background="@drawable/imap_border_getin_island"
            android:textSize="14dp"
            android:textColor="#030305"
            android:text="进入海岛"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>