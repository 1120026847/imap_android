<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/poi_top_relative"
        android:background="@drawable/imap_login_top_bg"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/btn_location_back"
            android:background="#00000000"
            android:textSize="16dp"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:text="取消" />
        <TextView
            android:layout_width="wrap_content"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:textSize="18dp"
            android:textColor="#ffffff"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="选择位置" />

        <Button
            android:id="@+id/btn_location_ok"
            android:layout_width="wrap_content"
            android:background="#00000000"
            android:textSize="16dp"
            android:textColor="#ffffff"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:text="确定" />

    </RelativeLayout>
    <TextView
        android:id="@+id/tv_location_ing"
        android:gravity="center"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:text="正在搜索附近位置.."
        android:textSize="16dp"
        android:layout_height="wrap_content" />
    <ListView
        android:id="@+id/lv_location_nearby"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3" />
    <TextView
        android:id="@+id/tv_loading"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="10dp"
        android:text="加载中.."
        android:layout_height="wrap_content" />

</LinearLayout>