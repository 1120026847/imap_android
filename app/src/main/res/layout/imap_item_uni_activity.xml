<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_margin="4dp"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#ffffffff"
    app:cardCornerRadius="4dp">
<LinearLayout android:layout_width="270dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
        <ImageView
        android:id="@+id/item_image"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:layout_height="145dp"
        android:scaleType="fitXY"/>
        <!--活动信息-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="-24dp"
            android:background="#66615F5F"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_height="24dp">
            <TextView
                android:id="@+id/tv_activity_name"
                android:layout_width="0dp"
                android:gravity="center_vertical"
                android:paddingLeft="4dp"
                android:textSize="12dp"
                android:textColor="#F8F7F9"
                android:layout_weight="1"
                android:layout_height="match_parent" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:gravity="right|center_vertical"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="17dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/imap_time"
                    android:layout_height="17dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_activity_time"
                android:layout_width="0dp"
                android:textSize="10dp"
                android:layout_weight="1"
                android:layout_marginRight="1dp"
                android:textColor="#F8F7F9"
                android:gravity="right|center_vertical"
                android:layout_height="match_parent" />

        </LinearLayout>
        <!--活动信息-->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">
             <!--海岛头像-->
             <LinearLayout
                 android:layout_width="wrap_content"
                 android:padding="2dp"
                 android:layout_height="match_parent">
             <ImageView
                 android:id="@+id/iv_activity_island"
                 android:scaleType="fitXY"
                 android:layout_width="34dp"
                 android:layout_height="34dp" />
             </LinearLayout>
            <!--海岛名称 和所属-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="3.6"
                android:padding="2dp"
                android:paddingLeft="3dp"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_island_name"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:layout_height="0dp" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                <TextView
                    android:id="@+id/tv_uni_name"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:textSize="10dp" />
                <ImageView
                    android:layout_width="13dp"
                    android:layout_marginLeft="2dp"
                    android:layout_gravity="center"
                    android:src="@drawable/imap_university"
                    android:layout_height="13dp" />
                </LinearLayout>
            </LinearLayout>
            <!--报名人数-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1.3"
                android:layout_gravity="center"
                android:padding="3dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_activity_sign_num"
                    android:layout_width="match_parent"
                    android:layout_weight="1.5"
                    android:gravity="center_horizontal"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:text="2433"
                    android:layout_height="0dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:textSize="9dp"
                    android:text="人报名"
                    android:layout_height="0dp" />
            </LinearLayout>
        </LinearLayout>
</LinearLayout>
</android.support.v7.widget.CardView>
