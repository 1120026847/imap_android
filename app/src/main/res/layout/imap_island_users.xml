<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/poi_top_relative"
        android:background="@drawable/imap_login_top_bg"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/btn_users_back"
            android:background="#00000000"
            android:textSize="16dp"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:text="返回" />
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:textSize="18dp"
            android:textColor="#ffffff"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="" />
        <Button
            android:id="@+id/btn_users_ok"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:background="#00000000"
            android:textSize="16dp"
            android:textColor="#ffffff"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:text="确定" />
    </RelativeLayout>
    <android.support.design.widget.TabLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        app:tabBackground="@android:color/transparent"
        android:layout_alignParentBottom="true"
        app:tabIndicatorColor="#c0a8ff"
        app:tabIndicatorHeight="0.5dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:tabSelectedTextColor="#cccccc"
        app:tabTextColor="#cccccc">
    </android.support.design.widget.TabLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/f_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
    <!--<ListView-->
        <!--android:id="@+id/lv_island_users"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_weight="3" />-->
</LinearLayout>